{
  "name": "voltronussy",
  "version": "0.1.0",
  "private": true,
  "description": "A tiny ECS game engine for friends to build games together",
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean",
    "game": "node scripts/run-game.js",
    "typecheck": "pnpm -r typecheck"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "ecs",
    "game-engine",
    "entity-component-system",
    "typescript"
  ],
  "license": "MIT"
}
