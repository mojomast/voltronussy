{
  "name": "@voltronussy/example-headless",
  "version": "0.1.0",
  "private": true,
  "description": "Headless example game for testing",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "start": "node --loader ts-node/esm src/index.ts",
