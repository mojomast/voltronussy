  "dependencies": {
    "@voltronussy/engine-abstractions": "workspace:*",
    "@voltronussy/engine-core": "workspace:*",
    "@voltronussy/adapter-null": "workspace:*"
  },
  "devDependencies": {
    "rimraf": "^5.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "license": "MIT"
}
